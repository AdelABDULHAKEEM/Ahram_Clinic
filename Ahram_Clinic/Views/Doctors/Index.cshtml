@model IEnumerable<Ahram_Clinic.Models.Doctors>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Clinic_Layout.cshtml";

}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
